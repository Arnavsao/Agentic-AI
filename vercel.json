{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "OPENAI_API_KEY": "@openai_api_key",
    "DEBUG": "false",
    "HOST": "0.0.0.0",
    "PORT": "8000",
    "CHROMA_PERSIST_DIRECTORY": "/tmp/chroma_db"
  },
  "functions": {
    "api/index.py": {
      "maxDuration": 30
    }
  }
}

